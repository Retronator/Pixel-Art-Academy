{
    "name": "Pixel Art Academy Learn Mode",
    "version": "0.24.1",
    "devTools": false,
    "devtron": true,
    "desktopHCP": true,
    "desktopHCPIgnoreCompatibilityVersion": false,
    "webAppStartupTimeout": 30000,
    "exposeLocalFilesystem": true,
    "window": {
        "minWidth": 640,
        "minHeight": 480,
        "fullscreen": true,
        "autoHideMenuBar": true,
        "icon": "@assets/icons/learnmode-a.png",
        "backgroundColor": "#000000",
        "_windows": {
            "icon": "@assets/icons/learnmode-a.ico"
        }
    },
    "windowDev": {
        "fullscreen": false,
        "fullscreenable": true
    },
    "uglify": true,
    "plugins": {},
    "devDependencies": {
        "electron": "17.4.11"
    },
    "packageJsonFields": {
        "author": "Retronator",
        "private": true,
        "devDependencies": {
            "electron": "17.4.11"
        }
    },
    "builderOptions": {
        "icon": ".desktop/assets/meteor.ico",
        "appId": "meteor.app",
        "compression": "maximum",
        "win": {
            "target": "nsis"
        },
        "publish": [
            {
                "provider": "generic",
                "url": "http://127.0.0.1:8080/"
            }
        ],
        "mac": {
            "icon": ".desktop/assets/meteor.icns"
        },
        "dmg": {
            "icon": ".desktop/assets/meteor.icns",
            "background": ".desktop/assets/dmgBackground.png",
            "iconSize": 54,
            "contents": [
                { "x": 377, "y": 190, "type": "link", "path": "/Applications" },
                { "x": 63, "y": 190, "type": "file" }
            ],
            "window": {
                "width": 480,
                "height": 300
            }
        }
    },
    "packagerOptions": {
        "appBundleId": "com.retronator.pixelartacademy-learnmode",
        "icon": ".desktop/assets/icons/learnmode-a.ico",
        "_osx": {
            "icon": ".desktop/assets/icons/learnmode-a.icns"
        },
        "darwinDarkModeSupport": true,
        "appCategoryType": "public.app-category.education",
        "appCopyright": "Copyleft (AGPL-3.0 & CC-SA) 2023 Matej Jan, Retronator",
        "overwrite": true,
        "electronVersion": "17.4.11",
        "platform": "darwin, win32, linux",
        "osxSign": {
            "hardenedRuntime": true,
            "entitlements": ".desktop/entitlements.plist",
            "entitlements-inherit": ".desktop/entitlements.plist"
        }
    }
}
