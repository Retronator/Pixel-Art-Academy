@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-publication-component
  absolute-cover()
  overflow hidden

  &.enabled
    .scroll-container
      overflow-y scroll

      .scroll-content
        .move-button
          position absolute
          z-index 2
          top 0
          bottom 0
          background none
          border none
          transition background 0.2s, width 0.5s

          &:hover
            background rgba(atariGray(2), 0.3)

          &.left
            left 0
            cursor w-resize

          &.right
            right 0
            cursor e-resize

  .scroll-container
    absolute-cover()
    right -100px
    padding-right 100px
    overflow hidden

    .scroll-content
      display flow-root
      position relative

      .publication-area
        position relative
        transition left 0.5s ease-out

        .publication
          absolute-cover-size()

          &.cover
            cursor pointer

          &.table-of-contents
            .content-items
              .content-item
                cursor pointer
