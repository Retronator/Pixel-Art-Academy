@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixeltosh-programs-drawquickly-interface-game-draw
  absolute-cover()

  .canvas-text
    display flex
    position absolute
    top 50rem
    left 20rem
    width 100rem
    height 100rem
    padding 5rem
    justify-content center
    align-items center
    text-align center
    header-17()
    line-height 24rem
    text-transform uppercase
    pixel-text-outline white

  .pixeltosh
    position absolute
    left 22rem
    top 158rem
    width 20rem
    height 31rem
    background-image image('/pixelartacademy/pixeltosh/programs/drawquickly/pixeltosh.png')

    &.thinking
      background-image image('/pixelartacademy/pixeltosh/programs/drawquickly/pixeltosh-thinking.png')

    &.got-it
      background-image image('/pixelartacademy/pixeltosh/programs/drawquickly/pixeltosh-gotit.png')

  .pixeltosh-text
    position absolute
    left 50rem
    top 177.5rem
    geneva-mini()
    line-height 8rem
    transform translateY(-50%)

    .instructions
      width 70rem
