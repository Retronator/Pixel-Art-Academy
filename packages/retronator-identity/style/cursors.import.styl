cursor(type)
  if type is default
    cursor url('/interface/cursors/2x/arrow.png') 2 0, default

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/arrow.png') 3 0, default

  else if type is pointer
    cursor url('/interface/cursors/2x/pointer.png?0.1.0') 6 2, pointer

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/pointer.png?0.1.0') 10 2, pointer

  else if type is crosshair
    cursor url('/interface/cursors/2x/crosshair-1.png') 20 18, crosshair

    &.cursor-frame-2
      cursor url('/interface/cursors/2x/crosshair-2.png') 20 18, crosshair

    &.cursor-frame-3
      cursor url('/interface/cursors/2x/crosshair-3.png') 20 18, crosshair

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/crosshair-1.png') 31 28, crosshair

    html.scale-3-or-up &.cursor-frame-2
      cursor url('/interface/cursors/3x/crosshair-2.png') 31 28, crosshair

    html.scale-3-or-up &.cursor-frame-3
      cursor url('/interface/cursors/3x/crosshair-3.png') 31 28, crosshair

  else if type is text
    cursor url('/interface/cursors/2x/text.png?0.1.1') 2 0, text

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/text.png?0.1.1') 3 0, text

  else if type is wait
    cursor url('/interface/cursors/2x/wait.png') 24 20, wait

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/wait.png') 36 20, wait

  else if type is grab
    cursor url('/interface/cursors/2x/grab.png') 6 4, grab

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/grab.png') 9 6, grab

  else if type is grabbing
    cursor url('/interface/cursors/2x/grabbing.png') 6 4, grabbing

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/grabbing.png') 9 6, grabbing

  else if type is nwse-resize
    cursor url('/interface/cursors/2x/nwse-resize.png') 16 13, nwse-resize

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/nwse-resize.png') 21 18, nwse-resize

  else if type is nesw-resize
    cursor url('/interface/cursors/2x/nesw-resize.png') 16 13, nesw-resize

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/nesw-resize.png') 21 18, nesw-resize

  else if type is ns-resize
    cursor url('/interface/cursors/2x/ns-resize.png') 14 15, ns-resize

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/ns-resize.png') 18 21, ns-resize

  else if type is ew-resize
    cursor url('/interface/cursors/2x/ew-resize.png') 16 9, ew-resize

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/ew-resize.png') 21 12, ew-resize

  else if type is e-resize
    cursor url('/interface/cursors/2x/e-resize.png') 16 9, e-resize

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/e-resize.png') 21 12, e-resize

  else if type is w-resize
    cursor url('/interface/cursors/2x/w-resize.png') 16 9, w-resize

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/w-resize.png') 21 12, w-resize

  else if type is zoom-in
    cursor url('/interface/cursors/2x/zoom-in.png') 14 10, zoom-in

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/zoom-in.png') 21 15, zoom-in

  else if type is move
    cursor url('/interface/cursors/2x/move.png') 18 18, move

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/move.png') 27 27, move

  else if type is talk
    cursor url('/interface/cursors/2x/talk.png') 6 36, pointer

    html.scale-3-or-up &
      cursor url('/interface/cursors/3x/talk.png') 9 54, pointer

  else
    cursor arguments
