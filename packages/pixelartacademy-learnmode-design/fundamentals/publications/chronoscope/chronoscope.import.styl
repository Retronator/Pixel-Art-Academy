figure-image-cutout-gradient(color, background = transparent)
  background-image repeating-linear-gradient(0deg, color, color 4rem, background 4rem, background 6rem, color 6rem),
  repeating-linear-gradient(90deg, color, color 4rem, background 4rem, background 6rem, color 6rem),
  repeating-linear-gradient(180deg, color, color 4rem, background 4rem, background 6rem, color 6rem),
  repeating-linear-gradient(270deg, color, color 4rem, background 4rem, background 6rem, color 6rem)
  background-size 1rem 100%, 100% 1rem, 1rem 100%, 100% 1rem
  background-position 0 0, 0 0, 100% 0, 0 100%
  background-repeat no-repeat
