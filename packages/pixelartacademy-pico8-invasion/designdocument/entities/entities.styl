@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pico8-cartridges-invasion-designdocument-entities
  .entities
    list-style none
    margin 5rem 0 10rem 10rem
    padding 0

    .entity
      position relative
      margin 5rem 0

      &:not(:last-child)::after
        content ''
        position absolute
        bottom -3rem
        left calc(50% - 5rem)
        right calc(50% - 5rem)
        height 1rem
        background black

      .entity-button
        font inherit
        width 100%
        padding 0
        background none
        border none

        &:hover
          color white
          pixel-text-outline black

  .add-entity-button
    padding 0 0 1rem
    background none
    border none
    border-bottom 1rem solid black
    font inherit
