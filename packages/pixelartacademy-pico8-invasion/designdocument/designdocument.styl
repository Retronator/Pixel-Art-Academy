@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pico8-cartridges-invasion-designdocument
  article
    width 100%
    padding 10rem
    geneva-mini()

    .cursor
      position relative
      display inline-block
      width 1rem
      height 1rem
      animation blink 0.5s step-start 0s infinite

      &::after
        content ''
        position absolute
        top -1em
        bottom -0.25em
        width 1rem
        background black

    .choice-indicator
      &::after
        content ' ... '

    hgroup
    h1
    h2
    h3
      chicago-mini()

    .title
      text-transform uppercase
      text-align center

    h2
      margin 20rem 0 10rem

    h3
      margin 10rem 0 5rem

    p
      margin 5rem

    > p
    > div > p
      margin-left 10rem

    p:has(+ ul)
      margin-bottom 2rem

    .properties
      list-style none
      margin 0 10rem 5rem
      padding 0

      .property
        position relative
        min-height 12rem

        input
          padding 0 0 0 5rem
          background none
          border none
          font inherit
          border-bottom 1rem solid black

    .hidden
      display none

    .asset-image
      width fit-content

      .landsofillusions-assets-components-bitmapimage
        overflow hidden

@keyframes blink
  50%
    visibility hidden
