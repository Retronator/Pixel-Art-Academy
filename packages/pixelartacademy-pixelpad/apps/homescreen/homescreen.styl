@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-homescreen.app
  width 310rem
  margin 0 auto
  padding 10rem
  uni()
  opacity 0
  user-select none

  .apps
    display flex
    flex-wrap wrap
    list-style none
    padding 0
    margin 10rem 1rem

    &:not(.enabled)
      pointer-events none

    .app
      display block !important // Forcing inline-block because velocity is not registering it.
      vertical-align top
      padding 5rem
      width 72rem
      text-transform uppercase
      text-align center
      cursor pointer

      .link
        text-decoration none
        color atari2600colors[6][0]

        .icon
          position relative
          display block
          width 50rem
          height 50rem
          margin 0 auto 5rem auto

        .name
          display block
          padding 0 5rem

      &:hover
        cursor pointer
        background transparent
        font-weight bold

        .link
          background-color transparent
          color atari2600colors[7][0]

          .icon
            animation bounce 1s step-start 0s infinite
            -webkit-animation bounce 1s step-start 0s infinite

@keyframes bounce
  50%
    top -5rem
