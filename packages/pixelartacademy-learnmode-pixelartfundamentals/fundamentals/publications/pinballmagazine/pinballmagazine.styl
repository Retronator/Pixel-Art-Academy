@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"

.publication.pinball-magazine
  position relative
  filter drop-shadow(-8rem 2rem 0 desktopShadowColor)
  transition filter 0.5s ease-out

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop-publications.active &
    filter drop-shadow(-24rem 6rem 0 desktopShadowColor)

  &.cover
  &.table-of-contents
    .running-header
    .running-footer
      display none

  &.table-of-contents
  &.content-part
    &::before
      content ''
      position absolute
      inset -5rem -296rem 0 -6rem

    .contents-area.read-only
      right -100%

  &.content-part
    &.history-of-pinball
      &::before
        background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/article-2.png')

  .contents-area.read-only
    absolute-cover()
    z-index 1
    overflow hidden

    .contents
      absolute-cover()
