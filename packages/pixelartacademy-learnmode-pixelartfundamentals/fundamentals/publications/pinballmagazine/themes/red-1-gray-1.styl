@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"
@import "{retronator:pixelartacademy-learnmode-pixelartfundamentals}/fundamentals/publications/pinballmagazine/pinballmagazine.import"

.publication.pinball-magazine.red-1-gray-1
  &::before
    background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/article-gray-1.png')

  &.cover-image.page-1
    .running-header::before
      running-header-gradient(atariRed(1))

  .running-header
    &::before
    &::after
      border-bottom-color atariRed(1)
      color atariGray(3)
      filter drop-shadow(atariGray(0) -1rem 1rem)

  .running-footer
    color atariGray(2)

  .contents-area
    .contents
      .pixelartacademy-publication-article.ql-container
        color atariGray(4)

  .pixelartacademy-publication-article-figure
    .elements
      border-color atariRed(1)

      .element
        border-color atariRed(1)

        .pixelartacademy-publication-article-figure-image
          figure-image-cutout(atariGray(0), transparent, gray-0-gray-1)
