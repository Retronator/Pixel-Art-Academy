@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"
@import "pinballmagazine.import"

.publication.pinball-magazine.issue-1
  &.cover
    background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/cover-1.png')

    .pixelartacademy-publication-article.ql-container
      .pixelartacademy-publication-article-customclass-container
        &:has(.pinballmagazine-cover-line)
          right 0
          text-align right

        &:has(.pinballmagazine-cover-line-1)
          right 124rem
          top 117rem
          width 100rem

        &:has(.pinballmagazine-cover-line-2)
          right 124rem
          bottom 125rem
          width 100rem

        &:has(.pinballmagazine-cover-line-3)
          right 11rem
          top 313rem
          width 100rem

  &.content-part
    &.history-of-pinball
      &.page-1
        &::before
          background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/prewar-1.png')

        .running-header::before
          running-header-gradient(historyOfPinballColor())

        .running-footer
          .page-numbers
            .page-number.spread-page-1
              color atariGray(3)

      h1
      .pinballmagazine-lead-paragraph
        color atariGray(6)

      h1
        margin-top 185rem
