@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"
@import "pinballmagazine.import"

.publication.pinball-magazine.issue-1
  &.cover
    background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/issues/1/cover.png')

    .pixelartacademy-publication-article.ql-container
      .pixelartacademy-publication-article-customclass-container
        &:has(.pinballmagazine-cover-line)
          right 0
          text-align right

        &:has(.pinballmagazine-cover-line-1)
          right 124rem
          top 117rem
          width 100rem

        &:has(.pinballmagazine-cover-line-2)
          right 124rem
          bottom 125rem
          width 100rem

        &:has(.pinballmagazine-cover-line-3)
          right 11rem
          top 313rem
          width 100rem

  &.content-part
    &.history-of-pinball
      &.page-1
        &::after
          background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/issues/1/prewarmachines/cover.png')

        .running-header::before
          running-header-gradient(historyOfPinballColor())

        .running-footer
          .page-numbers
            .page-number.spread-page-1
              color atariGray(3)

      h1
      .pinballmagazine-lead-paragraph
        color atariGray(6)
        text-shadow atariGray(0) -1rem 1rem

      h1
        margin-top 185rem

    &.gobble-holes
      &.page-1
        &::after
          background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/issues/1/gobbleholes/cover.png')

        .running-header::before
          running-header-gradient(partsInDetailColor(3), partsInDetailColor(1))

        .running-footer
          .page-numbers
            .page-number.spread-page-1
              color atariGray(3)

        .pixelartacademy-publication-article-customclass-container:has(.pinballmagazine-lead-image-credit)
          leadImageCreditRight()
          leadImageCreditTop()

      h1
        margin-top 280rem
        padding-left 25%
        color atariGray(6)
        text-shadow atariGray(0) -1rem 1rem
        text-align right
        text-wrap balance
        break-after column

      .pinballmagazine-lead-paragraph
        line-height 12rem !important
