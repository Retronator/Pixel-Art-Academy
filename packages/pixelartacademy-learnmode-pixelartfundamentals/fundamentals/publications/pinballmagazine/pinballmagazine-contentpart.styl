@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"
@import "{retronator:pixelartacademy-publication}/style/style.import"
@import "pinballmagazine.import"

.publication.pinball-magazine.content-part
  &.history-of-pinball
    &::before
      background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/article-gray-3.png')

    .running-header
      &::before
      &::after
        content 'The History of Pinball'
        border-bottom-color historyOfPinballColor(1)
        color historyOfPinballColor()
        filter drop-shadow(atariGray(2) -1rem 1rem)

    .running-footer
      color atariGray(2)

    .pixelartacademy-publication-article-figure
      .elements
        border 1rem solid atariGray(2)

        .element
          border 1rem solid atariGray(2)

          .pixelartacademy-publication-article-figure-image
            figure-image-cutout(atariGray(1), transparent, gray-1-gray-3)

  &.parts-in-detail
    &::before
      background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/article-brown-6.png')

    .running-header
      &::before
      &::after
        content 'Parts in Detail'
        border-bottom-color partsInDetailColor(2)
        color partsInDetailColor(1)
        filter drop-shadow(atariBrown(5) -1rem 1rem)

    .running-footer
      color partsInDetailColor(3)

    .contents-area
      .contents
        .pixelartacademy-publication-article.ql-container
          color partsInDetailColor()

    .pixelartacademy-publication-article-figure
      .elements
        border 1rem solid atariOrange(2)

        .element
          border 1rem solid atariOrange(2)

          .pixelartacademy-publication-article-figure-image
            figure-image-cutout(atariOrange(2), transparent, orange-2-brown-6)

  .running-header
  .running-footer
    position absolute
    z-index 1
    left 0
    right 0

  .running-header
    top 0
    pixel-georgia()
    color atariGray(2)

    &::before
    &::after
      position absolute
      top 0
      padding 10rem 20rem 4rem
      border-bottom 2rem solid

    &::before
      left 0

    &::after
      right -100%

  .running-footer
    bottom 0
    color atariGray(3)
    thintel()

    .page-numbers
      .page-number
        position absolute
        bottom 10rem

        &.spread-page-1
          left 20rem

        &.spread-page-2
          right calc(-100% + 20rem)

  .contents-area
    color atariGray(0)

    &.read-only
      .contents
        position absolute
        left 20rem
        top 40rem
        // Note: Width has to be a multiple of column width * n + gap * (n - 1), otherwise the width will not be ensured.
        width 14460rem
        height 320rem
        column-width 250rem
        column-gap 40rem
        column-fill auto

    .contents
      .pixelartacademy-publication-article.ql-container
        thintel()

        h1
          talk-to-three-headed-monkey()
          font-weight normal

        h2
          pixolde()
          font-weight normal
          margin 15rem 0 5rem 0

        p
          margin 5rem 0 10rem

        .pinballmagazine-lead-paragraph
          line-height 15rem

          &::first-letter
            float left
            margin-right 2rem
            serif-23()
            line-height 30rem

        .pixelartacademy-publication-article-figure
          daily()

          .added-to-references-info
            text-transform uppercase

          .pixelartacademy-publication-article-figure-image
            position relative

            &:hover
              z-index 2

            &.added-to-references
              border none

              .image
              .credit
                opacity 0.1

            .credit
              position absolute
              right 0
              bottom 0
              z-index 1
              padding 1rem
              text-align right
              text-wrap balance
              pointer-events none

              &:before
                content 'Image: '
