@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"
@import "{retronator:pixelartacademy-learnmode-pixelartfundamentals}/fundamentals/publications/pinballmagazine/pinballmagazine.import"

.publication.pinball-magazine.issue-1.content-part.bumpers
  &.page-1
    &::after
      background-image image('/pixelartacademy/learnmode/pixelartfundamentals/fundamentals/publications/pinballmagazine/issues/1/bumpers/cover.png')
      inset -5rem -1rem 0 -6rem

    .running-footer
      .page-numbers
        .page-number.spread-page-1
          color atariGray(2)

    .pixelartacademy-publication-article-customclass-container:has(.pinballmagazine-lead-image-credit)
      leadImageCreditRight()
      leadImageCreditTop()

  h1
    margin 128rem 0 33rem
    padding-right 50%
    color atariGray(6)
    text-shadow atariGray(0) -1rem 1rem
    text-wrap balance

  .pixelartacademy-publication-article-customclass-container:has(.pinballmagazine-lead-paragraph)
    break-after column

    & + h2
      margin-top 0
