@import "{retronator:landsofillusions}/styles/atari2600.import"

.apps-calendar
  background atari2600colors[0][0]
  padding 10rem

  .navigator
    .displayed-month-text
      margin-bottom 10px

  .days
    list-style none

    .day
      position relative
      margin-bottom 0
      min-height 1em

      .date-day
        position absolute
        top 0
        left 0

      .events
        display block
        list-style none

        .event
          display block
