@import "{retronator:landsofillusions}/styles/atari2600.import"

.apps-journal
  background atari2600colors[0][0]
  padding 10rem

  .check-ins
    list-style none
    padding 0

    .check-in
      position relative
      margin-bottom 20rem

      .image
        position relative
        float left
        width 200rem
        max-width 100%
        min-height 1rem
        margin 0
        word-break break-all

        img
          max-width 100%

        .actions
          display none
          position absolute
          left 10rem
          bottom 10rem

        &:hover
          .actions
            display block

      .data
        float left
        width 200rem
        max-width 100%
        margin-right 20rem

        .date
          margin-bottom 10rem

        .text
          position relative

          textarea
            width 200rem
            max-width 100%
            background none
            border none
            resize none

      &::after
        content ''
        display block
        clear both
