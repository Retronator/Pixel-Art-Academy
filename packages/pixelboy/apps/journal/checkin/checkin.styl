@import "{retronator:artificialengines}/mirage/helpers.import"

.apps-journal-check-in
  fixed-cover()
  overflow-y scroll
  padding 0 3em
  background rgba(0,0,0,0.9)

  .dialog
    margin 3em auto
    max-width 40em
    border 2px solid #666
    background #333
    padding 1em

  .check-in-form
    .text
      width 100%
      min-height 5em

    .image-file
    .external-url
      width 100%

    .image-preview
      max-width 100%

    .submit-area
      margin-top 2em

body.disable-scrolling
  overflow hidden
