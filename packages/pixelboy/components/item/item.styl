@import "{retronator:artificialengines}/mirage/helpers.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"

.pixelboy-resizing
.pixelboy-resizing *
  cursor nesw-resize !important

.pixelboy
  position fixed
  z-index 1
  bottom -100vh
  left 50%
  transform translateX(-50%)
  transition bottom 1s, transform 1s

  &.activated
    &.screen-center
      bottom 50%
      transform translate(-50%, 50%)

    &.screen-bottom
      bottom 35rem

  // The hand holding the pixelboy.
  .hand
    display block
    position absolute
    width 55rem
    height 120rem
    left -44rem
    bottom -35rem
    cursor s-resize

    img
      width 100%
      height 100%

    &::after
      content ''
      position absolute
      right 0
      bottom 30rem
      width 3rem
      height 3rem
      z-index -1
      background atari2600colors[4][3]

  .os
    // We can't use absolute-cover() because we're styling the width/height
    // of a canvas which need to be overriden directly from css.
    absolute-cover()
    border none
    transform translateX(0)
    overflow auto

  .screen
    position absolute
    left -1rem
    top -1rem
    right -1rem
    bottom -1rem
    border solid 1rem atari2600colors[1][0]
    box-shadow:
      0 2rem 0 -1rem atari2600colors[2][0],
      -1rem 1rem atari2600colors[3][0]

  .glass
    position absolute
    left -4rem
    top -4rem
    right -4rem
    bottom -4rem
    border solid 1rem atari2600colors[7][0]
    opacity 0.75
    box-shadow -1rem 1rem atari2600colors[5][0]

    &.resizable
      cursor nesw-resize
