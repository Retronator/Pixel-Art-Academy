@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-drawing-clipboard
  position absolute
  left calc(50% - 100rem)
  top -275rem
  width 200rem
  height 260rem
  transition all 0.4s

  .board
    absolute-cover()
    z-index 11
    background-image image('/pixelartacademy/pixelpad/apps/drawing/clipboard/clipboard-board.png')

  &::after
    content ''
    position absolute
    width 86rem
    height 18rem
    top 1rem
    left 57rem
    z-index 12
    background image('/pixelartacademy/pixelpad/apps/drawing/clipboard/clipboard-clip.png') center / 100%

  .page-first
  .page-second
    absolute-cover()
    color atariGray(1)
    daily()

  .page-first
    padding 24rem 23rem 10rem

    &::before
      content ''
      display block
      absolute-cover()
      z-index 11
      background-image image('/pixelartacademy/pixelpad/apps/drawing/clipboard/page-first.png')

    .asset-info
      position relative
      z-index 11

      .name
        text-transform uppercase

      .description
        margin 8rem 0

        ul
          list-style square

      .properties
        list-style none
        padding 0

        .property
          margin-bottom 4rem

          .property-name
            text-transform uppercase

          a
            text-decoration none
            border-bottom 1rem solid atariGray(4)

            &:hover
              color atariGray(2)

      .no-actions
        margin 8rem 0
        padding 4rem
        border 1rem solid atariGray(4)
        text-align center

      .actions
        list-style none
        width 100%
        padding 0
        display table
        border-collapse collapse

        .action
          display table-cell
          position relative
          border 1rem solid atariGray(4)
          width 33.3%
          height 10rem
          text-transform uppercase
          checkout()
          text-align center

          &.completed
            background atariGreen(5)
            padding 1rem

            .button
              &:hover
                background atariGreen(6)

          .button
          .link
            color atariGray(2)

            &:hover
              background atariGray(6)

          .button
            absolute-cover-size()
            border none
            background none
            font inherit
            text-transform inherit

          .link
            absolute-cover()
            text-decoration none
            line-height 9rem

    .asset-placeholder
      position relative
      z-index 13
      left -10rem

      &::after
        content ''
        position absolute
        top 15rem
        left -6rem
        width 23rem
        height 9rem
        background-image image('/pixelartacademy/pixelpad/apps/drawing/clipboard/paperclip.png')

  .page-first-turned
    absolute-cover-size()
    height 30rem
    z-index 13
    background image('/pixelartacademy/pixelpad/apps/drawing/clipboard/page-first-turned.png') center / 100%
    border none
    cursor pointer

  .page-second
    z-index 11
    background-image image('/pixelartacademy/pixelpad/apps/drawing/clipboard/page-second.png')

    .content
      top 10rem
      margin 29rem 0 0 12rem
      width 178rem
      height 221rem
      padding 5rem 12rem 14rem
      daily()
      color atariGray(1)

      h2
        daily()
        font-weight bold

      .asset
        float right
        position relative
        right -11rem

        &:hover
          .image
            right 2rem

        &::after
          content ''
          position absolute
          z-index 1
          width 23rem

        .image
          position relative
          width 100%
          right 0
          transition right 0.1s

.pixelartacademy-pixelpad-apps-drawing.active-asset:not(.editor-active)
  .pixelartacademy-pixelpad-apps-drawing-clipboard.active
    top calc(50% - 130rem)
    transition all 0.6s 0.2s
