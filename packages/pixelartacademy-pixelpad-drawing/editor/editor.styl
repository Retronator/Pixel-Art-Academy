@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-drawing
  &.editor-active
    .fatamorgana-interface
      &.pencil
        cursor url('/pixelartacademy/pixelpad/apps/drawing/editor/cursors/2x/pencil.png?0.1.0') 2 0, default

        html.scale-3-or-up &
          cursor url('/pixelartacademy/pixelpad/apps/drawing/editor/cursors/3x/pencil.png?0.1.0') 3 0, default

      &.eraser
        cursor url('/pixelartacademy/pixelpad/apps/drawing/editor/cursors/2x/eraser.png?0.1.0') 4 2, default

        html.scale-3-or-up &
          cursor url('/pixelartacademy/pixelpad/apps/drawing/editor/cursors/3x/eraser.png?0.1.0') 6 3, default

