@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-ruler
  position absolute
  top -40rem
  left 64rem
  width 85rem
  height 37rem
  z-index 13
  background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/ruler.png')
  filter drop-shadow(-1rem 0 0 desktopShadowColor)

  .pixelartacademy-pixelpad-apps-drawing.editor-desktop.editor-active .pixelartacademy-pixelpad-apps-drawing-editor-desktop:not(.focused-mode) &
    top -2rem

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active:not(.focused-mode) &
    transition-duration 0.2s

  .fatamorgana-interface.line &
  .fatamorgana-interface.rectangle &
  .fatamorgana-interface.ellipse &
    .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active:not(.focused-mode) &
      top 0

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.hidden-tools &
    visibility hidden

  .fatamorgana-interface.line & .line
    height 31rem
    visibility visible

  .fatamorgana-interface.rectangle & .rectangle.filled .indicator.filled
  .fatamorgana-interface.rectangle & .rectangle .indicator.outlined
  .fatamorgana-interface.ellipse & .ellipse.filled .indicator.filled
  .fatamorgana-interface.ellipse & .ellipse .indicator.outlined
    width 29rem
    height 17rem
    visibility visible

  .shape
    opacity 0.7

  .line
    left -1rem
    top 0

  .rectangle
    .indicator
      left 16rem
      top 14rem

  .ellipse
    .indicator
      left 50rem
      top 14rem

  .indicator
    position absolute
    width 1rem
    height 1rem
    visibility hidden
    transition width 0.2s, height 0.4s
    overflow hidden

    &.filled
      transition width 0.2s, height 0.65s
      opacity 0.9

    canvas
      absolute-cover-size()
