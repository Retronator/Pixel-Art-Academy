@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
  &.landsofillusions-assets-spriteeditor-pixelcanvas
    background initial

  .drawing-area
    position absolute
    z-index 11
    background atariGray(6)
    box-shadow -1rem 1rem 0 desktopShadowColor

    &.hidden
      display none

    .evaluation
      position absolute
      z-index 1
      top 5rem
      right 4rem

      .completed
        display inline-block
        width 10rem
        height 8rem
        background-image image('/pixelartacademy/practice/project/asset/bitmap/clipboardcomponent/completedcheckmark.png')

      .grade
        color atariGreen(3)
        kyrou-9()
        font-weight bold

    canvas
      absolute-cover-size()

  .tool-info
    z-index 200
    color atariGray(0)
    pixel-text-outline(atariGray(6))

    &.invert-colors
      color atariGray(6)
      pixel-text-outline(atariGray(0))

.pixelartacademy-pixelpad-apps-drawing.editor-desktop
  &.editor-visible
    &.active-asset:not(.editor-active)
      .pixelartacademy-pixelpad-apps-drawing-editor-desktop
        .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
          .drawing-area
            transition all 0.6s 0.2s

    .pixelartacademy-pixelpad-apps-drawing-editor-desktop
      &.drawing-active
        .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
          .drawing-area
            transition none

      .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
        .drawing-area
          transition all 0.6s

  &.active-asset:not(.editor-active)
    .pixelartacademy-pixelpad-apps-drawing-editor-desktop
      .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
        .drawing-area
          transition top 0.6s 0.2s

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
    .drawing-area
      transition top 0.6s
