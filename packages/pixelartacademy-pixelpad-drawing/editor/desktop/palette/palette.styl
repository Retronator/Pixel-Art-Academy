@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-palette
  position absolute
  top calc(50% - 40rem)
  right -70rem
  width 48rem
  height 139rem

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active:not(.focused-mode) &
    right 0

  &:hover
    .colors
      .ramp
        .shade
          .color
            .symbol
              visibility visible

  &.swatches
    &::before
      content ''
      position absolute
      z-index 13
      top 0
      right 0
      width 58rem
      height 142rem
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/palette-shadow.png')
      mix-blend-mode multiply

    &::after
      content ''
      absolute-cover()
      z-index 13
      pointer-events none
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/palette.png')

    .colors
      display flex
      position absolute
      width 46rem
      bottom 10rem
      left 2rem
      flex-direction row
      flex-wrap wrap-reverse

      &::before
        content ''
        absolute-cover()
        top auto
        height 129rem
        z-index 13
        pointer-events none
        background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/palette-empty.png')

      .ramp
        width 15rem
        height 15rem
        margin 1rem 8rem 0 0

        .shade
          width 100%
          height 100%
          position relative
          cursor pointer

          &::after
            content ''
            display none
            position absolute
            z-index 14
            top -2rem
            bottom -2rem
            left -3rem
            right -3rem
            border 1rem dotted atariGray(5)

          &.active::after
            display block

          .color
            absolute-cover()
            z-index 13

            .symbol
              padding-left 1rem

    .color-help-button
      bottom 1rem
      left 1rem
      right 7rem
      color atariGray(2)

      &:hover
        color atariGray(1)

    &.zx-spectrum
      .colors
        flex-direction row
        flex-wrap wrap

        .ramp
          display flex
          width 100%
          height 15rem
          margin-top 1rem

          .shade
            width 15rem
            height 100%
            margin-right 8rem

  &.tray
    width auto
    padding 13rem 5rem 0 11rem

    &::before
      content ''
      position absolute
      z-index 13
      top 2rem
      left -8rem
      width 104rem
      height 139rem
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/palette-tray-shadow.png')
      mix-blend-mode multiply

    &::after
      content ''
      absolute-cover-size()
      width 96rem
      z-index 13
      pointer-events none
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/palette-tray.png')

    .colors
      display flex
      position relative
      z-index 14
      height 112rem
      flex-direction column
      flex-wrap wrap

      .ramp
        position relative
        width 15rem
        margin 0 3rem 6rem 0

        .shade
          width 13rem
          height 13rem
          margin-top -2rem
          position relative
          cursor pointer

          &::after
            content ''
            display none
            position absolute
            z-index 4
            top -2rem
            bottom -2rem
            left -2rem
            right -2rem
            border 1rem dotted atariGray(3)
            pointer-events none

          &.active::after
            display block

          .color
            absolute-cover()
            z-index 3

            .symbol
              padding-left 2rem

    .color-help-button
      bottom 6rem
      left 7rem
      right 0
      color atariGray(3)

      &:hover
        color atariGray(2)

  .colors
    .ramp
      .shade
        .color
          display flex
          justify-content center
          align-items center

          .symbol
            adventure()
            visibility hidden

  .color-help-button
    position absolute
    z-index 14
    padding 1rem
    small-print()
    background none
    border none

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-palette-trayramp
  absolute-cover()
  top -2rem
  z-index 3

  .canvas
    absolute-cover-size()
