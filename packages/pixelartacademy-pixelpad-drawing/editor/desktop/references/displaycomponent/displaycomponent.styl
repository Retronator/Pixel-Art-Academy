@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-references-displaycomponent
  display none

  &.enabled
    display block

  .stored-references
  .displayed-references
    .references
      .reference
        .pixelartacademy-pixelpad-apps-drawing-editor-desktop-references-displaycomponent-reference
          transition all 1s

          &.dragging
            .movement
              top -1rem
              left 0
              transition-duration referenceMovementDurationLift

          .movement
            absolute-cover-size()
            transition all referenceMovementDurationDrop

  .stored-references
    position absolute
    top -210rem
    left calc(50% - 82rem)
    width 165rem
    height 190rem
    cursor pointer

    &::before
      content ''
      absolute-cover()
      z-index 13
      left -20rem
      bottom -5rem
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/tray-shadow.png')
      mix-blend-mode multiply

    &::after
      content ''
      position absolute
      top 4rem
      right 4rem
      width 157rem
      height 182rem
      z-index 100
      pointer-events none
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/tray-innershadow.png')
      mix-blend-mode multiply

    .references
      list-style none
      margin 0
      padding 0

      &::after
        content ''
        absolute-cover()
        z-index 14
        background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/tray.png')

      .reference
        position absolute
        left 82rem
        top 95rem

        .pixelartacademy-pixelpad-apps-drawing-editor-desktop-references-displaycomponent-reference
          .pixelartacademy-pixelpad-apps-drawing-editor-desktop:not(.dragging) &
            &:hover
              .movement
                left 0

          .movement
            left 1rem

    .actions
      pointer-events none

      .action
        position absolute
        z-index 14
        width 88rem
        height 96rem
        background atariGray(6)
        pointer-events initial
        box-shadow -1rem 1rem 0 rgba(atariGray(0), 0.2)
        transition all 0.2s

        &::after
          content ''
          position absolute
          left 4rem
          top 4rem
          width 80rem
          height 80rem
          background atariGray(2)

        &.upload
          z-index 15
          left 64rem
          bottom 25rem

        &.storage
          left 19rem
          bottom 10rem

        .button
          absolute-cover-size()
          z-index 1
          freehand()
          color atariPurple(3)
          border none
          background none
          padding-top 85rem

  .displayed-references
    position absolute
    top 50%
    left 50%

    .references
      list-style none
      margin 0
      padding 0

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active &
    .stored-references
    .displayed-references
      .pixelartacademy-pixelpad-apps-drawing-editor-desktop-references-displaycomponent-reference
        transition none

    .stored-references
      transition all 0.2s !important

  .pixelartacademy-pixelpad-apps-drawing.editor-desktop.editor-active .pixelartacademy-pixelpad-apps-drawing-editor-desktop:not(.focused-mode) &
    .stored-references
      top -181rem
      transition-delay 1s

      &:hover
        top -177rem

    &.opened
      .stored-references
      .stored-references:hover
        top calc(50% - 95rem)

      .actions
        .action
          &:hover
            transform translateX(-2rem)

  .pixelartacademy-pixelpad-apps-drawing.editor-desktop.editor-active .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active.dragging &
    .stored-references.hide-active
      top -150rem
