@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/portfolio/forms/form.import"

.pixelartacademy-pixelpad-apps-drawing-portfolio-forms-extras
  .extras-title
    position relative
    z-index 1
    margin-top 2rem
    pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormTypecastLabel()
    text-align center

    .text
      display inline-block
      padding 1rem 2rem

  .extras
    display table
    position relative
    margin -2rem 3rem 3rem 3rem
    width calc(100% - 6rem)
    border 1rem solid
    padding 0 2rem
    pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormFreehandValue()

    &::before
      content ''
      display block
      position absolute
      left -4rem
      top -4rem
      right -4rem
      bottom -4rem
      border 2rem solid
      pointer-events none

    .extra
      display table-row
      height 10rem

      &:last-child
        height 9rem

        .name
        .value
          padding-top 0

          &::before
            display none

      .name
      .value
        display table-cell
        position relative
        padding-top 1rem

        &::before
          content ''
          position absolute
          bottom 0
          left 0
          right 0
          z-index 0
          border-bottom 1rem dotted

      .name
        width 66%
        border-right 1rem solid

        &::before
          right 2rem

      .value
        padding-left 2rem

        &::before
          left 2rem

        .color-palette
          cursor pointer

          select
            pointer-events none
