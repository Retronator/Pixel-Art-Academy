@import "{retronator:retronator-identity}/style/style.import"
@import "form.import"

.pixelartacademy-pixelpad-apps-drawing-portfolio-forms-form
  position absolute
  left 15rem
  top 10rem
  width 170rem
  z-index 11
  margin-right 1rem
  padding 0 8rem 8rem
  box-shadow -1rem 0 0 atariAzure(0)

  &::before
    content ''
    display block
    height 21rem
    width 154rem

  input
  select
  button
    border none
    width 100%
    height 10rem
    padding 0
    background none
    font inherit
    color inherit
    input-placeholder atariGray(3)

  select
    height 9rem
    padding-left 2rem

  input[type=text]
    padding-left 4rem

  input[type=checkbox]
    display none

    & + .checkmark
      cursor text
      opacity 0
      daily()
      font-weight bold

      &::before
        content 'âœ”'

    &:checked + .checkmark
      opacity 1
      cursor delete

  .option
    padding 0 0 2rem 4rem
    cursor pointer

    .option-input
      display none

      &:checked ~ .radio
        background-image image('/pixelartacademy/pixelpad/apps/drawing/forms/radio-full.png')

    .radio
      display inline-block
      position relative
      vertical-align baseline
      width 7rem
      height 7rem
      background-image image('/pixelartacademy/pixelpad/apps/drawing/forms/radio-empty.png')

    .label
      thintel()
      text-transform uppercase

  .form-title
    margin 5rem 0
    thintel()
    text-align center
    text-transform uppercase

  .properties
    display table
    width 100%

    .property
      display table-row

      .name
      .value
        display table-cell

      .name
        padding 1rem 5rem 1rem 0
        width 1%
        vertical-align top
        pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormTypecastLabel()
        white-space nowrap

      .value
        padding 2rem 0 1rem
        pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormFreehandValue()

  .submit-area
    display flex
    margin-top 8rem

    .title
      padding-right 5rem
      pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormTypecastLabel()

    .button-area
      position relative
      flex-grow 1

      &::before
        content ''
        position absolute
        top 7rem
        left 0
        right 0
        z-index 0
        border-bottom 1rem solid

      .submit-button
        position relative
        top -1rem
        padding 0
        freehand()
        color transparent
        overflow hidden
        cursor text

        &:hover
          pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormFreehandValue()

      .prompt
        margin-top 2rem
        small-print()
        text-align center
        line-height 1em

  .error-message
    margin-top 8rem
    freehand()
    text-align center
    pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormErrorTransform()
