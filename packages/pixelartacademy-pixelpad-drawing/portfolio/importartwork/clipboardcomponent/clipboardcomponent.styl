@import "{retronator:retronator-identity}/style/style.import"

printColor = atariRed(2)
paperColor = atariBrown(7)
inputColor = atariGray(2)
errorColor = atariRed(4)

.pixelartacademy-pixelpad-apps-drawing-portfolio-importartwork-clipboardcomponent
  position absolute
  left 27rem
  top 10rem
  width 145rem
  z-index 11
  margin-right 1rem
  padding 0 8rem 8rem
  background paperColor
  box-shadow -1rem 0 0 atariAzure(0)
  color printColor

  &::before
    content ''
    display block
    height 21rem
    width 129rem
    background-image image('/pixelartacademy/pixelpad/apps/drawing/forms/importartwork-header.png')

  .form-title
    margin 5rem 0
    thintel()
    text-align center
    text-transform uppercase
