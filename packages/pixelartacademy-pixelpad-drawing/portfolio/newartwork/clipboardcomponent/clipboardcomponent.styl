@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/portfolio/forms/form.import"

printColor = atariCyan(2)
paperColor = atariGreen(7)
inputColor = atariGray(2)
errorColor = atariRed(4)

errorUnderline()
  pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormErrorUnderline()
  border-bottom-color errorColor

.pixelartacademy-pixelpad-apps-drawing-portfolio-newartwork-clipboardcomponent
  pixelArtAcademyPixelPadAppsDrawingPortfolioFormsFormColors(printColor, paperColor, inputColor, errorColor)

  &::before
    background-image image('/pixelartacademy/pixelpad/apps/drawing/forms/header-aqua-cyan.png')

  &.error-type
    .property.type
      .label
        position relative

        &::before
          errorUnderline()
          bottom 2rem

  &.error-width
    .property.size
      .width
        position relative

        &::after
          errorUnderline()
          bottom 3rem

  &.error-height
    .property.size
      .height
        position relative

        &::after
          errorUnderline()
          bottom 3rem

  .title .value
  .size .value .selection
  .size .value .dimension
    position relative

    &::before
      content ''
      position absolute
      bottom 3rem
      left 0
      right 0
      z-index 0
      border-bottom 1rem dotted printColor

    input
    select
      position relative
      top -2rem

  .properties
    .title
      .value
        &::before
          bottom 4rem

    .type
      .option
        display block

    .size
      .dimensions
        display block

        .dimension
          display inline-block
          width 31rem
          padding-top 1rem

          input
            text-align center

        .multiplication-symbol
          daily()
          color printColor

        .unit
          thintel()
          color printColor
