@import "{retronator:artificialengines}/mirage/helpers.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"
@import "{retronator:landsofillusions}/typography/typography.import"

.apps-drawing
  .tool
    position absolute
    cursor pointer

  .eraser
  .pencil
    left -10rem
    height 7rem
    transform: translate(0, -50%)

    &.active
      left 0

    img
      width 100%
      height 100%

  .pencil
    top: calc(50% - 7rem)
    width 28rem

  .eraser
    top: calc(50% + 7rem)
    width 26rem

  .color-picker
    right -10rem
    width 55rem
    height 11rem
    transform: translate(0, -50%)
    top: calc(50% - 50rem)

    img
      width 100%
      height 100%

    &.active
      right 2rem

  .color-fill-wrapper
    position absolute
    top -20rem
    width 100rem
    height 80rem
    right -49rem

    .color-fill
      opacity 0.5
      position absolute
      width 48rem
      height 48rem
      top 13rem
      left 13rem
      border-radius 50%

    .glass-bottom
      position absolute
      width 100rem
      height 80rem
      top 0px
      left 0px

    .glass-top
      position absolute
      width 61rem
      height 57rem
      top 10rem
      left 8rem

  &.in-sprite-selection
    .eraser
    .pencil
      left -40rem

    .color-picker
      right -55rem

    .color-fill-wrapper
      top -80rem
      right -100rem

  &.drawing-active
    .tool
      transition-delay 0s
      transition-duration 0.3s, 0.3s, 0.3s, 0.3s, 0.3s
