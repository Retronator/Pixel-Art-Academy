@import "{retronator:artificialengines}/mirage/helpers.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"
@import "{retronator:landsofillusions}/typography/typography.import"

.apps-drawing
  absolute-cover()
  uni()
  background atari2600colors[5][2]
  overflow hidden

  > *
    transition left 1s cubic-bezier(0.645, 0.045, 0.355, 1), top 1s cubic-bezier(0.645, 0.045, 0.355, 1), right 1s cubic-bezier(0.645, 0.045, 0.355, 1), bottom 1s cubic-bezier(0.645, 0.045, 0.355, 1), transform 1s cubic-bezier(0.645, 0.045, 0.355, 1)
    transition-delay 0.5s, 0.5s, 0.5s, 0.5s, 0.5s

  &.in-sprite-selection
    > *
      transition-delay 0s

  button
  input
    font inherit
    color inherit
    border 1rem solid black
    height 18rem

    &:focus
      outline none

  input
    background rgba(255,255,255,0.65)
    padding 0 3rem

    &[type=number]
      padding-right 0

  button
    background rgba(0,0,0,0.5)
    padding 0 5rem
    margin-bottom 3rem
    cursor pointer
