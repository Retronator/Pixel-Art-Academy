@import '{retronator:landsofillusions}/typography/typography.import'

.apps-drawing
  .navigator
    position absolute
    bottom -15rem
    left -25rem
    height 78rem
    width 85rem
    z-index 1

    .calculator-shadow
      position absolute
      top 5rem
      left 100%
      width 7rem
      height 58rem

    .calculator-base
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index -1

    .zoom-display
      retrotype()
      z-index 1;
      position absolute
      right 15rem
      top 10rem
      color rgb(0, 64, 44)

      .zoom-percentage-input
        width 50rem
        text-align right
        padding 0px
        border 0px none
        background transparent

    .zoom-in-button
      border 0px none
      padding 0px
      margin 0px
      position absolute
      top 43rem
      width 17rem
      height 11rem
      right 7rem
      background transparent

    .zoom-out-button
      border 0px none
      padding 0px
      margin 0px
      position absolute
      right 25rem
      top 43rem
      width 17rem
      height 11rem
      background transparent

  &.in-sprite-selection
    .navigator
      bottom -78rem
      left -78rem
