@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-studyplan-interests
  right 10rem
  left calc(50% + 10rem)

  .container
    .content
      .current-interests
        list-style none
        margin 0
        padding 0
        small-print()
        text-transform uppercase

        .interest
          display inline-block
          color atariGray(5)
          margin 5rem 8rem 0 0
          cursor pointer
          &:hover
            color atariGray(7)
