@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-studyplan-taskinfo
  position absolute
  z-index 3
  width 120rem
  padding 5rem
  visibility hidden
  opacity 0
  background atariCyan(2)
  transition opacity 0.2s, visibility 0.2s

  &.visible
    visibility visible
    opacity 1

  &.wide
    width 200rem

  &.completed
    .directive
      color atariGreen(6)

      &::after
        content '✔'
        adventure()

  &:not(.selected)
    pointer-events none

  .directive
    text-transform uppercase

  .instructions
    margin-top 5rem
    hyphens auto

  .interests
    .label
      margin-top 5rem
      padding-bottom 1rem
      border-bottom 1rem solid atariCyan(4)

    .list
      position relative
      list-style none
      padding-left 10rem
      margin 1rem 0 0

      .interest
        &::before
          content '+'
          position absolute
          left 0

        &.required
          color atariRed(6)

          &::before
            content 'x'

          &.acquired
            &::before
              content '✓'
              adventure()

        &.acquired
          color atariGreen(6)
