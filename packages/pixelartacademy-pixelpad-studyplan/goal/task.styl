@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-studyplan-goal-task
  position relative
  cursor pointer

  &:hover
    .building
      .blueprint
        border-image-source image('/pixelartacademy/pixelpad/apps/studyplan/blueprint-building-hover.png')

    .gate
      background-position-x -69rem

    .info
      visibility visible
      opacity 1

  &.active
    .building
      .blueprint
        background-color atariCyan(3)
        border-image-source image('/pixelartacademy/pixelpad/apps/studyplan/blueprint-building-active.png')

    &:hover
      .building
        .blueprint
          border-image-source image('/pixelartacademy/pixelpad/apps/studyplan/blueprint-building-active-hover.png')

  &.gate
    .gate
      display block

  .building
    position absolute
    left 0

    .blueprint
      width 100%
      height 100%
      background-color atariCyan(0)
      background-clip padding-box
      border-width 5rem 4rem 4rem 5rem
      border-style solid
      border-image image('/pixelartacademy/pixelpad/apps/studyplan/blueprint-building.png') 5 4 4 5

    .completed
      &::before
        content '✓'
        position absolute
        top -0.5rem
        left 1.5rem
        adventure()

  .gate
    display none
    position absolute
    left -2rem
    top 2rem
    width 11rem
    height 10rem
    background image('/pixelartacademy/pixelpad/apps/studyplan/blueprint-tiles.png') -49rem -4rem / 90rem 85rem

  .info
    position absolute
    z-index 1
    top 20rem
    left 50%
    transform translateX(-50%)
    width 120rem
    padding 5rem
    visibility hidden
    opacity 0
    background atariCyan(2)
    transition all 0.2s
    pointer-events none

    .directive
      margin-bottom 5rem
      text-transform uppercase

    .instructions
      hyphens auto

    .interests
      .label
        margin-top 5rem
        padding-bottom 1rem
        border-bottom 1rem solid atariCyan(4)

      .list
        position relative
        list-style none
        padding-left 10rem
        margin-top 1rem

        .interest
          &::before
            content '+'
            position absolute
            left 0

          &.required
            &::before
              content '→'
