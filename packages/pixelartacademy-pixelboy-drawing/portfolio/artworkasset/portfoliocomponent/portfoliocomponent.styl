@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-drawing-portfolio-artworkasset-portfoliocomponent
  position absolute
  bottom 0
  right 0
  box-sizing content-box
  background atariGray(6)
  box-shadow 0 0 5rem rgba(atariGray(0), 0.2)
  pointer-events initial

  &.sprite
    border 6rem solid atariGray(6)

  .landsofillusions-assets-components-spriteimage
  .landsofillusions-assets-components-bitmapimage
    absolute-cover()

    .canvas
      width 100% !important
      height 100% !important
