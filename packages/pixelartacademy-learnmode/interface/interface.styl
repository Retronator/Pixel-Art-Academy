@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-learnmode-interface
  fixed-cover()
  background atariGray(5)

  .intro-fade
    fixed-cover()
    z-index 1
    background atariGray(0)
    opacity 1
    transition 2s
    cursor wait

    &.complete
      opacity 0
      visibility hidden

    &.fast
      transition 1s

  .waiting-overlay
    fixed-cover()
    z-index 1
    cursor wait
    visibility hidden

    &.visible
      visibility visible

  .pixelartacademy-pixelpad
    .landsofillusions-components-overlay
      > .background
        background rgba(atariGray(0), 0.5)

.focused-artworks
  fixed-cover()
  z-index 6
  overflow-y auto
  cursor pointer
