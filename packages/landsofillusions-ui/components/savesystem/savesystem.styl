@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-savesystem
  .safe-area
    display flex
    flex-direction column
    justify-content space-evenly

    .title
      kyrou-9()
      font-weight bold
      text-align center
      pixel-text-emboss(atariGray(0), atariGray(2))

    .floppy
      position relative
      top 0
      width 68rem
      height 71rem
      background-image image('/landsofillusions/components/loadgame/floppy.png')
      filter drop-shadow(-4rem 2rem 10rem rgba(atariGray(0), 0.5))
      transition all ease-out 0.2s

      .shutter
        position absolute
        top 0
        left 15rem
        width 38rem
        height 25rem
        background-image image('/landsofillusions/components/loadgame/floppy-shutter.png')
        transition left ease-out 0.2s

      .label
        position absolute
        top 35rem
        left 9rem
        width 50rem
        height 28rem
        small-print()
        color atariGray(1)
        text-align center

        &:not(:has(textarea))
          overflow-wrap break-word
          white-space pre-wrap

        textarea
          width 100%
          height 100%
          padding 0
          margin 0
          border none
          background none
          font inherit
          color inherit
          text-align center
          input-placeholder atariGray(2)
          appearance none
          resize none
          white-space pre-wrap
          overflow-wrap break-word

          &:focus
            outline none
