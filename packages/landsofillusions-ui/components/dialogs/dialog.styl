@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-dialog
  position fixed
  z-index 4

  .dialog-overlay
    fixed-cover()
    background-color rgba(0,0,0,0.2)

    .dialog
      position fixed
      z-index 2
      left 50%
      top 50%
      transform translate(-50%, -50%)
      max-width 240rem
      padding 10rem
      border 1rem solid atariGray(3)
      background atariGray(1)
      text-align center
      filter drop-shadow(0 10rem 10rem rgba(0,0,0,0.5))

      .message
      .more-info
        margin-bottom 5rem

      .message
        p:first-child
          margin-top 0

      .more-info
        color atariGray(5)

      .buttons
        margin 12rem 0 -2rem 0
        padding 0
        list-style none

        .button
          display inline-block
          min-width 60rem
          position relative
          top -2rem
          background atariGray(3)
          padding 2rem 4rem
          margin 0 2rem
          uni()
          text-align center
          color atariGray(0)
          border none
          border-bottom 2rem solid atariGray(2)
          cursor pointer

          &:focus
            background: atariGray(4)
            outline none

          &:hover
            background: atariGray(4)

          &:active
            border-bottom none
            margin-bottom 2rem
            top 0
