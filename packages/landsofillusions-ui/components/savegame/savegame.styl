@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-savegame
  .safe-area
    .new-save-game
      display flex
      height 71rem
      justify-content center

      .floppy
        &.saving-active
          top -300rem
          transition top 1s

    .controls
      text-align center

      .action-button
        padding 2rem 4rem
        border 1rem solid atariGray(4)
        background black
        font inherit
        color inherit
        text-transform uppercase
        text-align center

        &:hover
          color atariGray(7)

        &.save-button
          position relative
          top -2rem
          padding 2rem 4rem 4rem
          visibility hidden
          color atariGreen(0)
          background transparent
          border none

          &::before
            content ''
            absolute-cover()
            z-index -1
            background atariGreen(3)
            border-bottom 2rem solid atariGreen(1)

          &:focus::before
            background: atariGreen(4)
            outline none

          &:hover::before
            background: atariGreen(4)

          &:active
            padding-top 4rem
            padding-bottom 2rem

            &::before
              border-bottom none
              top 2rem

          &.visible
            visibility visible
