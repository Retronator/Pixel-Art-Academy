@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-loadgame
  &.edit-enabled
    .safe-area
      .profiles
        .profile
          border 1rem solid atariGray(1)
          width 78rem
          margin 0 1rem

          &:hover:not(.active)
            border-color atariGray(2)

          &.active
            border-color atariAqua(3)

      .controls
        .action-button
          &.remove-button
            color atariRed(0)

            &::before
              background atariRed(3)
              border-bottom-color atariRed(1)

            &:disabled
              color atariRed(1)

            &:hover::before
              background atariRed(4)

  &:not(.edit-enabled)
    .safe-area
      .profiles
        .profile
          &:hover:not(.active)
            .floppy
              top -1rem

              .shutter
                left 7rem

          &.active
            .floppy
              top -300rem
              transition top 1s

  .safe-area
    .profiles
      display flex
      position relative
      height 80rem
      padding 0
      margin 0
      list-style none
      transition left 0.5s

      .profile
        display flex
        position relative
        vertical-align top
        flex-shrink 0
        flex-grow 1
        width 80rem
        height 80rem
        cursor pointer
        justify-content center
        align-items center

    .controls
      text-align center

      .action-button
        position relative
        padding 2rem 4rem 4rem
        margin 0 3rem
        vertical-align bottom
        font inherit
        color atariGray(0)
        text-transform uppercase
        text-align center
        border none
        background transparent

        &::before
          content ''
          absolute-cover()
          z-index -1
          background atariGray(2)
          border-bottom 2rem solid atariGray(1)

        &:disabled
          color atariGray(1)

        &:hover:not(:disabled)::before
          background atariGray(3)

        &:active:not(:disabled)
          padding-top 4rem
          padding-bottom 2rem

          &::before
            border-bottom none
            top 2rem

        &.previous-button
        &.next-button
          visibility hidden

          &.visible
            visibility visible

  .loading
    fixed-cover()
    z-index 1
    background atariGray(0)
    opacity 0
    transition opacity 0.5s ease-in-out
    cursor wait
    pointer-events none

    &.visible
      opacity 1
      pointer-events auto

    .loading-text
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      color atariGray(7)
      opacity 0
      transition opacity 0.2s ease-in-out

      &.visible
        opacity 1
