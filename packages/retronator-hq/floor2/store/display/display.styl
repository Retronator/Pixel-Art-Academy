@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-store-display
  .landsofillusions-components-overlay
    z-index 1
    background atariOrange(7)
    overflow hidden

    .background
      background none

  .scene
    absolute-cover()
    transition left ease-in-out 2s

    &.center
      left -150rem

    .retro-shadow
      position absolute
      z-index 1
      top 104rem
      left 84rem
      width 87rem
      height 129rem

    .retro
      position absolute
      z-index 2
      top 88rem
      left 84rem
      width 95rem
      height 130rem
      pointer-events none

    .smile
      position absolute
      z-index 3
      top 88rem
      left 114rem
      width 35rem
      height 50rem
      pointer-events none

    .table
      position absolute
      z-index 4
      top 218rem
      left -80rem
      right -80rem
      bottom -500rem
      background atariGray(4)
      border-top 1rem solid atariGray(3)

    .display
      position absolute
      z-index 0
      left 160rem
      top 10rem
      width 300rem
      height 160rem
      padding 5rem
      background atariGray(1)
      border 1rem solid atariGray(2)
      border-color atariGray(3) atariGray(2) atariGray(0) atariGray(1)
      box-shadow 0 2rem 0 -1rem atariOrange(3), -1rem 1rem 0 atariOrange(4), -2rem 3rem 0 atariOrange(5), -3rem 5rem 0 atariOrange(5)

      .screen
        position relative
        z-index -1
        height 148rem
        background atariGray(0)
        border 1rem solid atariGray(2)
        border-top-color atariGray(0)
        border-right-color atariGray(0)
        color atariGray(4)
        overflow hidden

        h3
          padding 5rem 7rem
          margin 0
          acme-7()
          font-weight normal
          background atariGray(0)

        .supporters-list-titles
          position absolute
          width 100%
          z-index 1

        .supporters-area
          display flex

          .supporters-list
            position relative
            width 50%

            .title
              position absolute
              width 100%
              top 0
              left 0

        .content-area
          absolute-cover()
          overflow-y scroll

          .content
            .show-more-button
              border none
              background atariGray(1)
              color atariGray(3)
              font inherit
              margin 0 0 10rem 20rem

              &:hover
                background atariGray(2)
                color atariGray(4)

            .supporters-area
              display flex

              .supporters-list
                padding-top 25rem

                .retronator-store-components-top-supporters
                  z-index 0
                  top 30rem
                  padding 0 10rem 5rem 20rem
                  margin 0

                  .supporter
                    .name-amount-area
                      .name
                        width 75%

                      .amount
                        width 25%

            .transaction-messages
              .retronator-store-components-top-supporters
                list-style none
                padding 0 10rem

                .supporter
                  .name-amount-area
                    width 25%
                    float left

                    .name
                      width 100%

                    .amount
                      display none

                  .message
                    margin-left 25%
                    padding-left 10rem
                    overflow-wrap anywhere
